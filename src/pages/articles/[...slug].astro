---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import TableOfContents from '../../components/TableOfContents.astro';
import ShareButtons from '../../components/ShareButtons.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('articles');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
---

<Layout title={entry.data.title} description={entry.data.description} headings={headings} showShareButtons={true}>
    <article>
        <header class="article-header">
            {entry.data.thumbnail && (
                <div class="thumbnail">
                    <Image src={entry.data.thumbnail} alt={entry.data.title} loading="eager" fetchpriority="high" />
                </div>
            )}
            <div class="meta">
                <span>{entry.data.date.toISOString().split('T')[0]}</span>
                <span class="separator">|</span>
                <span>By {entry.data.writer}</span>
            </div>
            <h1 class="title">{entry.data.title}</h1>
            <div class="tags">
                {entry.data.tags.map(tag => (
                     <a href={`/tags/${tag}`} class="tag">#{tag}</a>
                ))}
            </div>
        </header>

        {headings && headings.length > 0 && (
            <div class="mobile-toc">
                <details>
                    <summary>Table of Contents</summary>
                    <TableOfContents headings={headings} />
                </details>
            </div>
        )}

        <div class="article-content">
            <Content />
        </div>

        <div class="article-footer">
            <div class="footer-share">
                <h3>Share this article</h3>
                <ShareButtons title={entry.data.title} url={Astro.url} />
            </div>
            <p class="character-count">{entry.body.split('\n').length}l  {entry.body.split(/\s+/).filter(Boolean).length}w  {entry.body.length}c</p>
        </div>
    </article>
</Layout>

<style>
    .article-header {
        margin-bottom: 2rem;
        border-bottom: 1px solid #eee;
        padding-bottom: 2rem;
    }
    .thumbnail {
        margin-bottom: 1.5rem;
        width: 100%;
        max-height: 300px;
        overflow: hidden;
        border-radius: 8px;
        display: flex;
        justify-content: center;
    }
    .thumbnail img {
        width: auto;
        height: auto;
        max-width: 100%;
        max-height: 300px;
        object-fit: contain;
        display: block;
    }
    .meta {
        font-family: var(--font-mono);
        font-size: 0.9rem;
        color: #666;
        display: flex;
        gap: 0.5rem;
        align-items: center;
        margin-bottom: 0.5rem;
    }
    .separator {
        color: #ccc;
    }
    .title {
        font-size: 2.5rem;
        margin: 0.5rem 0 1rem 0;
        line-height: 1.2;
    }
    .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    .tag {
         color: #555;
        text-decoration: none;
        background: #eee;
        padding: 0.2rem 0.6rem;
        border-radius: 4px;
        font-size: 0.8rem;
    }
    .tag:hover {
        background: #e0e0e0;
    }
    
    /* Content styles */
    .article-content :global(h2) {
        margin-top: 2rem;
        border-bottom: 1px solid #eee;
        padding-bottom: 0.5rem;
    }
    .article-content :global(img) {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 1rem auto;
    }
    .article-content :global(blockquote) {
        border-left: 4px solid #ccc;
        margin-left: 0;
        padding-left: 1rem;
        color: #555;
        font-style: italic;
        font-family: var(--font-serif);
    }

    /* Mobile TOC */
    .mobile-toc {
        display: none;
        margin-bottom: 2rem;
        padding: 1rem;
        background-color: #f9f9f9;
        border-radius: 8px;
        border: 1px solid #eee;
    }
    .mobile-toc summary {
        cursor: pointer;
        font-weight: bold;
        font-family: var(--font-serif);
    }
    
    @media (max-width: 768px) {
        .mobile-toc {
            display: block;
        }

        .footer-share {
            display: none;
        }
    }

    .article-footer {
        margin-top: 3rem;
        padding-top: 1rem;
        border-top: 1px solid #eee;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .footer-share h3 {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        margin-top: 0;
    }

    .character-count {
        font-family: var(--font-mono);
        font-size: 0.85rem;
        color: #888;
        margin: 0;
        white-space: pre; /* Preserve spaces for wc-like formatting */
        text-align: right; /* Keep character count right aligned */
        align-self: flex-end; /* Align self to the end of the flex container */
    }
</style>